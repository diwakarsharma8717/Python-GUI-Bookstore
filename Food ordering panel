from tkinter import *

w=Tk()
w.title("Restraunt Application")
w.geometry("1255x700")

def newuser():
    entry1.delete(0,END)
    entry2.delete(0,END)
    
    restartorder()

#New User
frame1=LabelFrame(w,padx=270,pady=8)
frame1.grid(row=0,column=0)
button1=Button(frame1,text="New User",borderwidth=10,width=10,command=newuser)
button1.grid(row=0,column=0)
def restartorder():
    global total
    total=0
    text1.delete(1.0,END)
    text2.delete(1.0,END)
    text4.delete(1.0,END)
    
