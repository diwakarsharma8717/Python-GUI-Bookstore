#Order
frame5=LabelFrame(w)
frame5.grid(row=1,column=1)
text1=Text(frame5,height=12,width=70)
text1.grid(row=0,column=0)
text2=Text(frame5,height=12,width=5)
text2.grid(row=0,column=1)
text3=Text(frame5,height=1,width=70)
text3.grid(row=2,column=0)
text3.insert(END,"Total Amount:")
text4=Text(frame5,height=1,width=5)
text4.grid(row=2,column=1)
total=0
def text_1(order,price):
    global total
    text1.insert(END,order)
    text2.insert(END,price)               
    total=total+eval(price)
    text4.delete(1.0,END)
    text4.insert(END,total*1.05)

def payment(w):
    frame6=LabelFrame(w)
    frame6.grid(row=3,column=1)
    label=Label(frame6,text="This Frame will Have QRs",width=80,height=19)
    label.grid(row=0,column=0)
    frame7=LabelFrame(w)
    frame7.grid(row=4,column=1)
    button=Button(frame7,text="Press when payment confirmed",borderwidth=8,command=lambda:confirm(frame6))
    button.grid(row=0,column=0)

def confirm(frame):
    label1=Label(frame,text="***ORDER CONFIRMED***")
    label1.grid(row=0,column=0)
    
#Modes of Payment
frame5=LabelFrame(w,padx=32)
frame5.grid(row=2,column=1)+n
button1=Button(frame5,text="Cash",borderwidth=8,width=12,command=lambda:payment(w))
button1.grid(row=0,column=0,padx=15,pady=10)
button2=Button(frame5,text="Card",borderwidth=8,width=12,command=lambda:payment(w))
button2.grid(row=0,column=1,padx=15,pady=10)
button3=Button(frame5,text="UPI",borderwidth=8,width=12,command=lambda:payment(w))
button3.grid(row=0,column=2,padx=15,pady=10)
button4=Button(frame5,text="Paytm",borderwidth=8,width=12,command=lambda:payment(w))
button4.grid(row=0,column=3,padx=15,pady=10)

w.mainloop()
